<div class="container-fluid">
  <div class="row">

    <% listings.each do |listing| %>
      <div class="col-sm-12 col-lg-4">
        <div class="custom-card mb-3 m-1 justify-content-center" style="position: relative;">
          <h5 class="price-tag card-text d-flex mb-0">
              <small>
                <i class='fa-solid fa-money-bill-wave'></i>
                <%= " Â¥#{format_price(listing[:vehicle].price)}" %>
                <span class="small-text text-white"> day</span>
              </small>
          </h5>
          <img class="card-img-top img-fluid mb-3" src="<%= asset_path "exteriors/exterior-#{listing[:vehicle][:id] % 31}.jpeg" %>" alt="Vehicle">

          <div class="card-body d-flex flex-column align-items-center justify-content-center p-2" style="max-width: 100%;">
            <div class="d-flex justify-content-between align-items-center w-100 no-wrap">
              <h5 class="card-title d-flex text-capitalize mb-0"><%= listing[:vehicle].title %></h5>
            </div>
            <div class="row">
              <div class="d-flex my-3 align-items-center px-0">
                <%= render 'partials/days', days: listing[:days] %>
              </div>
            </div>
            <%= link_to 'Find out more', vehicle_path(listing[:vehicle]), class: "btn custom-btn text-white text-shadow rounded-pill w-100" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
