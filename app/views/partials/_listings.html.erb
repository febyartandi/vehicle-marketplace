<% listings.each do |listing| %>
  <div class="card mb-3 shadow-sm rounded img-fluid" style="max-width: 100%; background-color: beige;">
    <div class="row g-0">

      <div class="col-md-4 temporary-vehicle" style="background: url(<%= asset_path 'default_caravan.png' %>); background-size: cover; background-position: center; background-repeat: no-repeat; background-color: white;">
      </div>

        <div class="col-md-8 px-3">
          <div class="card-body">

            <h5 class="card-title text-capitalize"><%= listing[:vehicle].title %></h5>
            <%# <p class="card-text"><%= listing[:vehicle].description</p> %>
            <%# <p class="card-text"><small class="text-body-secondary"><%= "Provider: #{listing[:vehicle].user.email}" %></small></p>
            <p class="card-text"><small class="text-body-secondary"><%= "Daily Rate: #{format_price(listing[:vehicle].price)}" %></small></p>

            <div class="d-flex flex-column justify-content-center align-items-center">
              <div class="d-flex w-100 justify-content-center">
                <%= render 'partials/days', days: listing[:days] %>
              </div>
              <%= link_to 'View', vehicle_path(listing[:vehicle]), class: "btn btn-primary text-white text-shadow rounded-pill w-50" %>
            </div>

          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
