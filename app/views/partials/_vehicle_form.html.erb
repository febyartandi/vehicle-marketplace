<div class="container">
  <% dotw = %w(Sunday Monday Tuesday Wednesday Thursday Friday Saturday) %>
  <%= simple_form_for [@vehicle] do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :days, as: :check_boxes, collection: dotw, include_hidden: false, label: "Days Available" %>
    <%= f.submit %>
  <% end %>
</div>
