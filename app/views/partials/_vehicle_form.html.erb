<div class="mt-3 p-4 container w-50 border shadow-sm d-flex flex-column align-items-center justify-content-center">
  <div class="w-75 text-start">
    <h2>Hi <%= current_user.email %>!</h2>
    <h3>Tell us about your vehicle:</h3>
  </div>
  <% dotw = %w(Sunday Monday Tuesday Wednesday Thursday Friday Saturday) %>
  <div class="w-75 mt-3">
    <%= simple_form_for [@vehicle] do |f| %>
      <%# TODO: Add image upload. %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :days, as: :check_boxes, collection: dotw, include_hidden: false, label: "Days Available" %>
      <%= f.submit class: "btn btn-primary text-shadow text-white w-100" %>
    <% end %>
  </div>
</div>
