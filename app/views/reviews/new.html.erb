<div class="mt-3 p-4 container w-50 border shadow-sm d-flex flex-column align-items-center justify-content-center">
  <div class="w-75 text-start">
    <h2>New Review for <%= @vehicle.title %> </h2>
    <h3>You booked on <%= @booking.start_date %></h3>
  </div>

  <div class="w-75 mt-3">
    <%= simple_form_for @review, url: vehicle_booking_reviews_path(@vehicle, @booking), method: :post do |f| %>
      <% if @review.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h4><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h4>
          <ul>
            <% @review.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.input :title, input_html: { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= f.input :content, as: :text, input_html: { class: "form-control" } %>
      </div>

      <div class="form-group star-rating">
        <%= f.label :rating %>
        <div class="rating">
          <% (1..5).reverse_each do |rating| %>
            <%= f.input :rating, as: :radio_buttons, collection: [[rating, 'â˜…']],
                        item_wrapper_tag: false,
                        label: false,
                        input_html: { class: 'rating-star', id: "rating_#{rating}" },
                        label_html: { class: 'star', title: "#{rating} stars" },
                        include_hidden: false %>
          <% end %>
        </div>
      </div>

      <%= f.button :submit, "Create Review", class: "btn btn-primary text-shadow text-white w-100" %>
    <% end %>
  </div>
</div>
