<div class="mt-3 p-2 container w-50 border shadow-sm d-flex flex-column align-items-center justify-content-center">
  <div class="p-1">

    <table class="w-75">
      <tbody>
        <tr class="border-bottom">
          <h1 class="text-capitalize">
            <%= @listing[:vehicle].title %>
          </h1>
        </tr>
        <tr class="border-bottom">
          <td class="d-flex flex-column text-end px-3">Provider: </td>
          <td class="px-1"><%= @listing[:vehicle].user.email %></td>
        </tr>
        <tr class="border-bottom">
          <td class="d-flex flex-column text-end px-3">Daily Rate: </td>
          <td class="px-1">¥<%= @listing[:vehicle].price %></td>
        </tr>
        <tr class="border-bottom">
          <td class="d-flex flex-column text-end px-3">Description: </td>
          <td class="px-1"><%= @listing[:vehicle].description %></td>
        </tr>
        <tr class="border-bottom">
          <td class="d-flex flex-column justify-content-center align-items-center text-end px-3">Availability: </td>
          <td class="pt-2">
            <div class="d-flex w-100 justify-content-start">
              <%= render 'partials/days', days: @listing[:days] %>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <div id="carouselExampleIndicators" class="carousel slide w-50 mt-2">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag "campingcar.jpeg", alt: "camping car", class: "d-block w-100"%>
    </div>
    <div class="carousel-item">
      <%= image_tag "interior.webp", alt: "camping car interior", class: "d-block w-100"%>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon bg-black rounded-circle" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon bg-black rounded-circle" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

  <div class="w-100 d-flex justify-content-start mt-3 mb-2">
    <%= link_to '〈 Browse More Vehicles', vehicles_url, class: "btn btn-success text-white text-shadow mx-3" %>
    <%= link_to 'Reserve This Vehicle', new_vehicle_booking_path(:vehicle_id), class: "btn btn-danger text-white text-shadow flex-grow-1 mx-5" %>
  </div>
</div>
